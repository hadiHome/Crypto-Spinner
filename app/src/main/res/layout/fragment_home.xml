<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg2"
    android:layoutDirection="ltr">


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"

        ads:adSize="BANNER"
        android:layout_marginTop="5sp"


        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">

    </com.google.android.gms.ads.AdView>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/energyLayout"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/rectangle_green"
        android:layout_below="@id/adView"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/acumin_bdpro"
            android:text="ENERGY"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/text"
            android:fontFamily="@font/acumin_bdpro"
            android:text="0"
            android:textSize="20dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="/1"
android:id="@+id/text2"
            android:layout_toEndOf="@id/energy"
            android:fontFamily="@font/acumin_bdpro"
            android:textSize="20dp"></TextView>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rectangle_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="WATCH"
                android:id="@+id/text3"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/acumin_bdpro"
                android:textSize="13dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="FOR MORE"
                android:textColor="@color/white"
                android:id="@+id/text4"
                android:layout_below="@id/text3"
                android:layout_centerHorizontal="true"

                android:fontFamily="@font/acumin_bdpro"
                android:textSize="10dp"></TextView>

        </RelativeLayout>

    </RelativeLayout>

        <ImageView
            android:id="@+id/wallet"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/adView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/test"></ImageView>





    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="32dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imRoulette"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:src="@drawable/wheelffff" />

        <ImageView
            android:id="@+id/imPointer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/poin"
            android:visibility="visible" />

    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_spin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/rel"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_spin_button"
        android:fontFamily="@font/acumin_bdpro"
        android:text="SPIN NOW"
        android:textColor="#344763"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donâ€™t have an account?"
       android:layout_below="@id/btn_spin"
        android:id="@+id/dnt"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"

        android:textColor="@color/white"

        android:textSize="10dp"
        android:fontFamily="@font/acumin_rpro"
        ></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@id/dnt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/button"

            android:fontFamily="@font/acumin_rpro"
            android:text="Create An Account"
            android:textColor="#102747"
            android:textSize="8dp"></androidx.appcompat.widget.AppCompatButton>






